! Xft settings ---------------------------------------------------------------

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

!-------------------------------------------------------------------------------
!
!	U R X V T - Settings
!
URxvt*geometry:					84x22
URxvt*foreground:				#FFFFFF
URxvt*borderLess:				false
URxvt*depth:					32
URxvt*background:				rgba:0000/0000/0000/dddd
URxvt.scrollBar:				off
URxvt*scrollBar_right:				true
URxvt*font:					xft:Terminus-6
URxvt.boldFont:                                 xft:Terminus-6
URxvt*cursorBlink:				true
URxvt*cursorUnderline:				true
URxvt*scrollColor:				#111111
URxvt*perl-ext-common:				default,clipboard

URxvt.boldMode: false
URxvt.cursorColor: #4C9AE4

!black
*color0: #222222
*color8: #666666
!red
*color1: #E84F4F
*color9: #D23D3D
!green
*color2: #B7CE42
*color10: #BDE077
!yellow
*color3: #FEA63C
*color11: #FFE863
!blue
*color4: #66AABB
*color12: #4C9AE4
!magenta
*color5: #B7416E
*color13: #E16A98
!cyan
