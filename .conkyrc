#avoid flicker
double_buffer yes

#own window to run simultanious 2 or more conkys
own_window yes
own_window_transparent no
own_window_type normal
own_window_hints undecorate,sticky,skip_taskbar,skip_pager 

#enable real transparency
own_window_argb_visual yes
own_window_argb_value 255

#borders
draw_borders no
border_margin 1

#shades
draw_shades no

#position
gap_x 5
gap_y 5
alignment top_left

#behaviour
update_interval 1

#colour
default_color 4c9ae4
own_window_colour 000000

#font
use_xft yes
xftfont kroeger 05_55 caps:size=6

#to prevent window from moving
use_spacer none
minimum_size 1280 0

#mpd
mpd_host localhost
mpd_port 6600


TEXT
${voffset 1}${image ~/.conky/arch.png -p 2,1}     kernel: ${color FFFFFF}${kernel} | ${color}cpu: ${color FFFFFF}${font}${cpu}% ${color}mem: ${color FFFFFF}${font}${mem} | ${color}cpu temp: ${color FFFFFF}${execi 30 sensors | grep 'CPU Temp' | cut -d ' ' -f 6} | ${color}uptime: ${color FFFFFF}${font}${uptime_short} | ${color}up: ${color FFFFFF}${upspeedf eth0}Kb/s ${color}down: ${color FFFFFF}${font}${downspeedf eth0}Kb/s | ${color}home: ${color FFFFFF}${font}${fs_free /home} | ${color}mpd: ${color FFFFFF}${font}${mpd_artist} - ${mpd_title}